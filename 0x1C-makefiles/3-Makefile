CC = gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:%.c=%.o)
NAME = school
RM = -rm -f

.PHONY = all
all = school

school: school.o main.o
	${CC} school.o main.o -o $@
school.o: school.c m.h
	${CC} -c $< -o $@
main.o: main.c m.h
	${CC} -c $< -o $@

.PHONY = clean oclean fclean
fclean: oclean clean
oclean:
	${RM} ${OBJ}
clean:
	${RM} ${NAME} *.swp *~

